<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ConsumptionCalculator.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
             x:Class="ConsumptionCalculator.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

  <Panel>
    <Button Width="45"
            VerticalAlignment="Top"
            Command="{Binding BackCommand}"
            IsVisible="{Binding CanGoBack}">
      <Svg Path="/Assets/ic_fluent_arrow_left_24_filled.svg"/>
    </Button>

    <TransitioningContentControl Content="{Binding CurrentPage}"/>

    <Button Width="45"
            VerticalAlignment="Bottom"
            Command="{Binding SettingsCommand}"
            IsVisible="{Binding !CanGoBack}">
      <Svg Path="/Assets/ic_fluent_settings_24_filled.svg"/>
    </Button>
  </Panel>
</UserControl>
